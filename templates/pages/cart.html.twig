{% extends 'base.html.twig' %}

{% block title %}Votre Panier - TECH NOIR{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('cart') }}
{% endblock %}

{% block body %}
<div class="cart-page container">

    <h1 class="cart-title">üõí Votre Panier</h1>

    {% if cart is empty %}
        <p class="empty-cart">Votre panier est vide.</p>
        <a href="{{ path('catalog_all') }}" class="btn-return">‚¨Ö Retour au catalogue</a>
    {% else %}
        <table class="cart-table">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Produit</th>
                    <th>Quantit√©</th>
                    <th>Prix unitaire</th>
                    <th>Sous-total</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for item in cart %}
                    <tr>
                        <td>
                            <img src="{{ asset('images/uploads/produits/' ~ item.produit.image) }}" alt="{{ item.produit.nom }}" class="cart-img">
                        </td>
                        <td>{{ item.produit.nom }}</td>
                        <td>{{ item.quantite }}</td>
                        <td>{{ item.produit.prix|number_format(2, ',', ' ') }} ‚Ç¨</td>
                        <td>{{ (item.produit.prix * item.quantite)|number_format(2, ',', ' ') }} ‚Ç¨</td>
                        <td>
                            <a href="{{ path('cart_remove', {'id': item.produit.id}) }}" class="btn-remove">‚ùå Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="cart-summary">
            <h3>Total : <span class="total-price">{{ total|number_format(2, ',', ' ') }} ‚Ç¨</span></h3>

            <div class="cart-actions">
                <a href="{{ path('checkout') }}" class="btn-checkout">‚úÖ Passer la commande</a>
                <a href="{{ path('cart_clear') }}" class="btn-clear">üßπ Vider le panier</a>
                <a href="{{ path('catalog_all') }}" class="btn-return">‚¨Ö Retour au catalogue</a>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
