{% endblock %}

{% block body %}
	<div class="homepage-desktop">

		{# <header class="nav-bar">
			<div class="logo">
				<span class="line1">TECH</span><br>
				<span class="line2">NOIR</span>
			</div>

			<div class="search-bar">
				<i class="fas fa-search"></i>
				<input type="text" placeholder="Recherche...">
			</div>

			<div class="nav-icons">
				<a href="{{ path('catalog') }}">
					<i class="fas fa-list"></i>
					<span>Catalogue</span>
				</a>
				<a href="{{ path('cart') }}">
					<i class="fas fa-shopping-cart"></i>
					<span>Panier</span>
