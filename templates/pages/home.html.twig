				<a href="#">
					<i class="fas fa-user"></i>
					<span>Profil</span>
				</a>
			</div>
		</header> #}

		<section class="slideshow">
			<div class="slides">
				<img src="{{ asset('images/slideshow/Slide_1.webp') }}" alt="Slide 1">
				<img src="{{ asset('images/slideshow/Slide_2.webp') }}" alt="Slide 2">
				<img src="{{ asset('images/slideshow/Slide_3.webp') }}" alt="Slide 3">
				<img src="{{ asset('images/slideshow/Slide_4.webp') }}" alt="Slide 4">
			</div>
		</section>

		<section class="categories">
			<h3>Catalogue</h3>
			<div class="category-list">
				<div class="category">
					<img src="{{ asset('images/categories/smartphones.png') }}" alt="">
					<p>Smartphones</p>
				</div>
				<div class="category">
					<img src="{{ asset('images/categories/tv.png') }}" alt="">
					<p>TV</p>
				</div>
				<div class="category">
					<img src="{{ asset('images/categories/ordinateurs_portables.png') }}" alt="">
					<p>Ordinateurs portables</p>
				</div>
				<div class="category">
					<img src="{{ asset('images/categories/haut_parleurs.png') }}" alt="">
					<p>Haut Parleurs</p>
				</div>
			</div>
		</section>

		<section class="promos">
			<h3>Promotions</h3>
			<div class="products-grid">
				{% for produit in produits %}
					<div class="product-card">
						<div class="discount">-{{ produit.reduction }}%</div>
						<img src="{{ asset(produit.image) }}" alt="{{ produit.nom }}">
						<h4>{{ produit.nom }}</h4>
						<p class="old-price">{{ (produit.prix * 100) / (100 - produit.reduction) | round(2) }}
							€</p>
						<p class="new-price">{{ produit.prix }}
							€</p>
						<p class="stock">
							{% if produit.enStock %}✅ En stock{% else %}❌ Rupture
							{% endif %}
						</p>
						<button>Ajouter au panier</button>
					</div>
				{% endfor %}
			</div>
		</section>

	</div>
{% endblock %}
