{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('product') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('product') }}
{% endblock %}

{% block body %}
<div class="product-page">
    <img src="{{ asset('images/uploads/produits/' ~ produit.image) }}" alt="{{ produit.nom }}">
    <div class="details">
        <h1>{{ produit.nom }}</h1>
        <p>{{ produit.description }}</p>
        <p class="prix">{{ produit.prix }} â‚¬</p>
        <a href="{{ path('cart_add', {'id': produit.id}) }}">Ajouter au panier</a>
    </div>
</div>
{% endblock %}