{% extends 'base.html.twig' %}

{% block title %}Connexion - Tech Noir{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  {{ encore_entry_link_tags('auth') }}
{% endblock %}

{% block body %}
  <div class="auth-page">
    <div class="auth-card">
      <h1>Connexion Ã  votre compte</h1>

      <form method="post" action="{{ path('app_login') }}">
        {% if error %}
          <div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="form-group">
          <label for="inputEmail">Email</label>
          <input type="email" id="inputEmail" name="_username" value="{{ last_username }}" required autofocus>
        </div>

        <div class="form-group">
          <label for="inputPassword">Mot de passe</label>
          <input type="password" id="inputPassword" name="_password" required>
        </div>

        
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="auth-btn" type="submit">Se connecter</button>
      </form>
    </div>
  </div>
{% endblock %}